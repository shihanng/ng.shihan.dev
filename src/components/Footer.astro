---
import Contacts from "../components/Contacts.astro";
const year = new Date().getFullYear();
const name = "Shi Han NG";

interface Props {
  hasSocial?: boolean;
}

const { hasSocial = true } = Astro.props;
---

<footer class="mt-auto w-full max-w-[85rem] py-10 px-4 sm:px-6 lg:px-8 mx-auto">
  <!-- Grid -->
  <div class="text-center">
    <div class="mt-3">
      <p class="text-gray-500">
        &copy; {year}
        {name} |
        <a href="https://creativecommons.org/licenses/by-nc/4.0/"
          >CC BY-NC 4.0</a
        >
      </p>
      {
        hasSocial ? (
          <p class="text-gray-500">
            Always happy to connect! Feel free to reach out on the following
            platforms.
          </p>
        ) : null
      }
    </div>
    {hasSocial ? <Contacts /> : null}
  </div>
  <!-- End Grid -->
</footer>
